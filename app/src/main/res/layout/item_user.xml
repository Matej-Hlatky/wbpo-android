<layout>
    <data>
        <variable name="model" type="me.hlatky.wbpo.model.User" />
    </data>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="8dp"
        tools:context="me.hlatky.wbpo.ui.user.list.UserListRecyclerViewAdapter">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="@dimen/user_grid_avatar_size"
                android:layout_height="@dimen/user_grid_avatar_size"
                android:layout_marginEnd="8dp"
                tools:src="@tools:sample/avatars"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/fullNameText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/avatarImage"
                android:layout_toStartOf="@id/followToggle"
                android:text="@{model.fullName}"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                tools:text="@tools:sample/full_names"
                />

            <TextView
                android:id="@+id/emailText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_toEndOf="@id/avatarImage"
                android:layout_toStartOf="@id/followToggle"
                android:layout_below="@id/fullNameText"
                android:text="@{model.email}"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="@tools:sample/last_names"
                />

            <CheckBox
                android:id="@+id/followToggle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:button="@drawable/selector_toggle_favorite_24"
                android:tooltipText="@string/user_follow_label"
                app:buttonTint="?attr/android:textColorPrimary"
                tools:ignore="UnusedAttribute" />

            <TextView
                android:layout_width="@dimen/user_grid_avatar_size"
                android:layout_height="wrap_content"
                android:layout_below="@id/avatarImage"
                android:text="@{String.valueOf(model.id)}"
                android:gravity="center_horizontal"
                tools:text="1"
                />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>
